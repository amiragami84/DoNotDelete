---
apiVersion: v1
kind: Service
metadata:
  name: protected-vms-client-views-blue
  namespace: prod
  labels:
    subsystem: analytics-blue
    color: blue
spec:
  selector:
    bg: protected-vms-client-views-blue
  ports:
    - protocol: TCP
      port: 80
      targetPort: 80
      name: http

---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: protected-vms-client-views-ingress-blue
  namespace: prod
  annotations:
    kubernetes.io/ingress.class: traefik
    traefik.ingress.kubernetes.io/rewrite-target: /v2/monitoring/protected-vms
spec:
  rules:
  - host: analytics.api.zerto.com
    http:
      paths:
      - path: /rc/v2/monitoring/protected-vms
        backend:
          serviceName: protected-vms-client-views-blue
          servicePort: http
---
